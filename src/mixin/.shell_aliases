# !/bin/sh
#
alias sudo="sudo "
alias la="ls -la"
alias ks="ls"
alias mkf="touch"
alias ivm="vim"
alias g="git"
alias v="vagrant"
alias d="docker"
alias dc="docker-compose"

ghq-peco(){
  cd "$( ghq list -p | peco)"
}
alias sd="ghq-peco"

cd-gopath(){
  dir="$(ls $GOPATH/src | peco)"
  cd "$GOPATH/src/$dir"
}
alias gd="cd-gopath"

re-login(){
  exec $SHELL -l
}
alias lo=re-"login"

alias rm='mv --backup=numbered --target-directory=${HOME}/.Trash/'

