# !/bin/sh
#
alias sudo="sudo "
alias ll="ls -l"
alias la="ls -la"
alias open="xdg-open"
alias g="git"
alias v="vagrant"
alias d="docker"
alias dc="docker compose"
alias di="docker images | sed -e '1d' | sort -h -r"

select-repository(){
  dir="$(ls $HOME/Repositories | peco)"
  cd $HOME/Repositories/$dir
}
alias sd="select-repository"

cd-gopath(){
  dir="$(ls $GOPATH/src | peco)"
  cd "$GOPATH/src/$dir"
}
alias gd="cd-gopath"

re-login(){
  exec $SHELL -l
}
alias lo="re-login"

history-grep(){
  if [ $# = 0 ]; then
    history
  else
    history 1 | grep "$@"
  fi
}
alias h="history-grep"
